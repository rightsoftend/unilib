{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": false,
    "incremental": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}